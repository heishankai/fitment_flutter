<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 外部存储根目录 - 支持所有外部存储路径（包括相机拍照） -->
    <external-path name="external_storage" path="."/>
    <!-- 应用外部文件目录 -->
    <external-files-path name="external_files" path="."/>
    <!-- 应用缓存目录 -->
    <cache-path name="cache" path="."/>
    <external-cache-path name="external_cache" path="."/>
    <!-- 支持相机拍照的文件路径 -->
    <external-path name="dcim" path="DCIM/"/>
    <external-path name="dcim_camera" path="DCIM/Camera/"/>
    <external-path name="pictures" path="Pictures/"/>
    <external-files-path name="pictures" path="Pictures/"/>
    <external-files-path name="dcim" path="DCIM/"/>
    <!-- 支持所有媒体文件路径 -->
    <external-path name="media" path="."/>
    <!-- 支持临时文件路径（相机拍照可能使用） -->
    <cache-path name="temp" path="."/>
    <external-cache-path name="temp" path="."/>
    <!-- 支持 files 目录（某些相机应用可能使用） -->
    <files-path name="files" path="."/>
</paths>

